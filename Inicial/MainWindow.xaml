<Window x:Class="Inicial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inicial"
        mc:Ignorable="d"
        Title="MainWindow" Height="250.165" Width="500.083">
    <Grid Margin="0,0,2,-4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="88*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFAA5D5D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Cadastrar" HorizontalAlignment="Left" Height="135" Margin="2,39,0,0" VerticalAlignment="Top" Width="160" Click="btnCad_Click" Grid.Column="1"/>
        <Button x:Name="btnServi" Content="Serviços" HorizontalAlignment="Left" Height="135" Margin="243,39,0,0" VerticalAlignment="Top" Width="160" Click="btnServi_Click" Grid.ColumnSpan="2" Grid.Column="1"/>

    </Grid>
</Window>
